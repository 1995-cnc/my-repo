package pluralsight.DemoCode;

public class Helllo {

	public static void main(String[] args) {
		
		double val1=100.0d;
		double val2=50.0d;
		double result0.0d;
		char opCode='f';
		
		if(opCode== 'a')
			result = val1 + val2;
		else if(opCode== 's')
			result = val1 - val2;
		else if(opCode== 'm')
			result = val1 * val2;
		else if(opCode== 'd')
			result = val1 / val2;
		else
			System.out.println("Invalid opCode!");
		
		System.out.println(result);
		

	}

}
